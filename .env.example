# ── B People — Environment Variables ──
# Copy this to .env.local and fill in your values.

# PostgreSQL (Supabase)
DATABASE_URL="postgresql://user:password@host:5432/bpeople?schema=public"

# Auth
NEXTAUTH_SECRET="your-secret-here-generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:3000"

# Stripe
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."

# OpenAI (for AI-powered communications)
OPENAI_API_KEY="sk-..."

# WhatsApp (Evolution API / Z-API)
WHATSAPP_API_URL="https://api.evolution.com.br"
WHATSAPP_API_TOKEN="your-token"
WHATSAPP_INSTANCE="bpeople"

# Error Tracking (Sentry)
SENTRY_DSN="https://xxx@sentry.io/xxx"

# Analytics (PostHog)
NEXT_PUBLIC_POSTHOG_KEY="phc_..."
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# File Storage (S3 / Cloudflare R2)
S3_BUCKET="bpeople-uploads"
S3_REGION="us-east-1"
S3_ACCESS_KEY="..."
S3_SECRET_KEY="..."
S3_ENDPOINT="" # Leave empty for AWS S3, set for R2

# Email (Resend)
RESEND_API_KEY="re_..."
EMAIL_FROM="noreply@bpeople.com.br"

# App
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"
